<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\common\version.props" />
  
  <PropertyGroup>
    <TargetFrameworks>net461;net451;net40;netstandard1.4</TargetFrameworks>
    <AssemblyName>Nito.Comparers.Rx</AssemblyName>
    <RootNamespace>Nito.Comparers</RootNamespace>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Label="NuGet">
    <PackageId>Nito.Comparers.Rx.Unofficial</PackageId>
    <Title>Nito.Comparers.Rx.Unofficial</Title>
    <Description>Comparer extension methods for System.Reactive.</Description>
    <PackageTags>comparer;equalitycomparer;icomparable;iequatable</PackageTags>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net451' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net40' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\common\CommonAssemblyInfo.cs" Link="Properties\CommonAssemblyInfo.cs" />
    <Compile Include="..\..\common\CommonAssemblyVersion.cs" Link="Properties\CommonAssemblyVersion.cs" />
    <Compile Include="..\..\common\versionInfo.cs" Link="Properties\versionInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Reactive.Linq.Unofficial" Version="4.0.0-rtm-170301" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Nito.Comparers.Linq\Nito.Comparers.Linq.csproj" />
  </ItemGroup>
</Project>
